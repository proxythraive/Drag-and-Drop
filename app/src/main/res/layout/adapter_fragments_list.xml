<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/holder_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/text_10"
    android:background="@color/default_color"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/text_02"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_of_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/cost_of_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/width_of_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/weight_of_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20" />

    </LinearLayout>

</androidx.cardview.widget.CardView>